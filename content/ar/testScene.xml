<AUGMENTATION viewlist="normal,extended" name="testScene" desc="this is the first test Scene" viewswitch="false" viewdisplay="false">
  
  <VALUESERVER>
    <WEBSOCKET url="ws://192.168.3.223:1880/ws/data" transmitter="send"/>
  </VALUESERVER>

  <!-- point defined by IMGTARGET in IRL -->
  <IMGTARGET file="Marker_20.jpg" width="10" extended="true">
    
    <!-- For displaying a changable signal lamp -->
    <NODE tx="0" ty="10" tz="0.0" rx="90.0" sxyz="1.0" show="btnPressed">
      <SIGNAL rgb="#00FF00" status="true"/>
    </NODE>

    <!-- For displaying a text -->
    <NODE tx="0" ty="0" tz="0" rx="90.0" sxyz="0.1" show="true">
      <TEXT rgba="#000000ff" width="140" backrgba="#ffffff88">
        <METADATA fallback="en">
          <label>
            <en>
              <![CDATA[ <align="left">test ar label (language: en) ]]>
            </en>
            <de>
              <![CDATA[ <align="left">test ar label (language: de) ]]>
            </de>
          </label>
        </METADATA>
      </TEXT>
    </NODE>

  </IMGTARGET>

  <!-- Static components on display -->
  <CAMERA x="0" y="0" distance="0.1">

    <NODE tx="0" ty="-10" tz="10" sxyz="0.5" show="true">
      <SWITCH w="1.0" h="1.0" d="0.2" rgb="#00FF00" on="true" alpha="1">
        <TRANSMIT attribute="pressed" variable="btnPressed" transmitter="send"/>
      </SWITCH>
    </NODE>

    <NODE tx="-55" ty="30" tz="100" sxyz="0.5" show="true">
      <TEXT rgba="#000000ff" width="140" backrgba="#ffffff88">
        <METADATA fallback="en">
          <label>
            <en>
              <![CDATA[ <align="left">test label (language: en) ]]>
            </en>
            <de>
              <![CDATA[ <align="left">test label (language: de) ]]>
            </de>
          </label>
        </METADATA>
      </TEXT>
    </NODE>

  </CAMERA>
</AUGMENTATION>